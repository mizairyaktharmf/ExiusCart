# ===========================================
# ExiusCart Environment Configuration
# ===========================================

# Application
NODE_ENV=development
APP_NAME=ExiusCart

# API Configuration
API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://exiuscart:exiuscart_password@localhost:5432/exiuscart
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=exiuscart
DATABASE_USER=exiuscart
DATABASE_PASSWORD=exiuscart_password

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS Configuration
AWS_REGION=me-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# S3 Configuration (for file uploads)
AWS_S3_BUCKET=exiuscart-uploads
AWS_S3_REGION=me-south-1

# Email Configuration (AWS SES)
SMTP_HOST=email-smtp.me-south-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=your-ses-smtp-user
SMTP_PASSWORD=your-ses-smtp-password
EMAIL_FROM=noreply@exiuscart.com

# Domain Configuration
MAIN_DOMAIN=exiuscart.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Super Admin (Initial Setup)
SUPER_ADMIN_EMAIL=admin@exiuscart.com
SUPER_ADMIN_PASSWORD=admin123456

# Feature Flags
ENABLE_WHATSAPP_INTEGRATION=false
ENABLE_PAYMENT_GATEWAY=false
